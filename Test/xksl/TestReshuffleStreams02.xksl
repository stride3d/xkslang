
shader ShaderMain
{
	stage stream float2 Position : POSITION;
	stage stream float4 ColorTarget: SV_Target0;
	
	stage void VSMain() 
    {
        streams.Position = float2(0.0f, 1.0f);
    }

	float4 Compute()
	{
		return float4(streams.Position.xy, 0, 1);
	}
	
    stage void PSMain() 
    {
        streams.ColorTarget = Compute();
    }
}


