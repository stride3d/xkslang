//Both ShaderMain and ShaderCompose inherits from ShaderBase, which has a stage method
//At the end they will all refers to the same method

shader ShaderBase
{
	float varBase;
	
	stage float Compute()
	{
		return varBase;
	}
};

shader ShaderCompose: ShaderBase
{
	float varCompose;
	
	float ComputeComp()
	{
		return varCompose + Compute();
	}
};

shader ShaderMain: ShaderBase
{
	compose ShaderCompose comp1;
	
    void VSMain()
    {
		float f = Compute();
		f += comp1.ComputeComp();
    }
};

