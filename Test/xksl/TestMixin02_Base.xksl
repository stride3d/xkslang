// mixin Base;
// mixin OverrideA;
// mixin OverrideB;
// expected result: 6

shader Base
{
	stream int ColorTarget;

    abstract int Compute()
    {
        return 1;
    }
    void main()
    {
        // Note: Since we don't have streams yet, we might find a different mechanism to hardcode this into SV_Color?
        streams.ColorTarget = Compute();
    }
}

shader OverrideB : OverrideA
{
    override int Compute()
    {
        return 5;
    }
	
	override void main()
    {
        // Note: Since we don't have streams yet, we might find a different mechanism to hardcode this into SV_Color?
        streams.ColorTarget = 1 + Compute();
    }
}

shader OverrideA : Base
{
    override int Compute()
    {
        return 2;
    }
}
