shader TextureSample
{
	stream float2 TexCoord : TEXCOORD0;
	
	Texture2D Texture0;
	SamplerState Sampler0;

	/*SamplerState LinearSampler
    {
        Filter = MIN_MAG_MIP_LINEAR;
    };*/
	
    float4 Shading()
    {
        float2 uv2 = streams.TexCoord.xy;
        float4 color = Texture0.Sample(Sampler0, uv2);
        
        return color;
    }
};
