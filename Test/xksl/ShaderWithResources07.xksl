//Sample using all the different kind of resources found in Xenko shaders
shader ShaderA
{
	rgroup ResourceGroup
	{
		SamplerState Sampler0;
		Texture2D Texture0;
		TextureCube CubeMap;
	}
	
	cbuffer cb
	{
		float3 direction;
		float2 uv2;
	}

	void VSMain()
	{
		float4 color1 = Texture0.Sample(Sampler0, uv2);
		float4 color2 = CubeMap.Sample(Sampler0, direction);
	}
}

shader ShaderB
{
	cbuffer cb
	{
		int lightIndex;
	}
	
	rgroup ResourceGroupB
	{
		Texture3D<uint2> LightClusters;
		Buffer<uint> LightIndices;
		Buffer<float4> PointLights;
	}
	
	void PSMain()
	{
		int realLightIndex = LightIndices.Load(lightIndex);
		float4 pointLight1 = PointLights.Load(realLightIndex * 2);
		uint2 lightData = LightClusters.Load(int4(0, 1, 2, 3));
	}
}
