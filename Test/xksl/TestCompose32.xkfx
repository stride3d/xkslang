//Activate some additionnal options with xkslang main test program
//============================================
setSampleTestOptions processSampleWithXkfxLibrary true
//============================================

convertAndLoadRecursif "TestCompose32" ShaderMain

mixer m
m.mixin( ShaderMain[
	directLightGroups = mixin(DirectLightGroup),
	materialPixelStage = mixin(MaterialSurfaceArray[
		aComp1 = mixin(AnotherComp),
		aComp2 = mixin(AnotherComp),
		ac = [
			mixin(AnArrayComp),
			mixin(AnArrayComp),
		]
	]),
	DirectLightGroupArray.directLightGroups = mixin(DirectLightGroup),
])

m.setStageEntryPoint( Vertex="VSMain", Pixel="PSMain" )
m.compile()
