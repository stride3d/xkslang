addResourcesLibrary "library"

setDefine SILICON_STUDIO_RENDER_TARGET_COUNT "2"
convertAndLoadRecursif "ShadingBase" ShadingBase

mixer mixerC
mixerC.mixin( ComputeColor )

mixer m
m.mixin( ShadingBase )

m.addComposition( ShadingBase.ShadingColor0 = mixerC )
m.addComposition( ShadingBase.ShadingColor1 = mixerC )

m.setStageEntryPoint Vertex "VSMain"
m.setStageEntryPoint Pixel "PSMain"
m.compile
