//Each stage using its own cbuffer, both of them will be included in the final outputs
shader ShaderMain
{
	float var1;
	float var2;
	float var4[4];
	float var5;
	float2x2 var6;
	float4 var7;

    cbuffer CBufferPixelStage
    {
        float MinVariance;
    }
	
	cbuffer CBufferVertexStage
    {
        float BleedingFactor;
    }

	stage void VSMain() 
    {
        float f = BleedingFactor + var2 + var4[2];
    }
	
    stage void PSMain() 
    {
        float f = MinVariance + var7.x;
    }
};