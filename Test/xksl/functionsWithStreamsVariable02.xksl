shader ShaderBase
{
	stage stream int b1: B1;
	stage stream float b2 : B2;
}

shader ShaderMain: ShaderBase
{
	stage stream float4 s1: S1;
	stage stream float4 s2: S2;

	void VSMain()
	{
		streams.s1 = float4(0,1,2,3);
		streams.s2 = float4(4,5,6,7);
		Streams backup = streams;
		streams.s2 = float4(8,9,10,11);
		streams = backup;  //equivalent to: _setStreams(backup);
	}
}
