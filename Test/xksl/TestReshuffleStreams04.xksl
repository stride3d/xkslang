
shader ShaderMain
{
	stage stream float2 Position : POSITION;
	stage stream float4 ColorTarget: SV_OUTPUT;
	
	stage void VSMain() 
    {
        streams.Position = float2(0.0f, 1.0f);
    }

	float4 Compute()
	{
		return Compute(5.0f);
	}
	
	float4 Compute(float p)
	{
		return float4(streams.Position, p, 1);
	}
	
    stage void PSMain() 
    {
		streams.ColorTarget = Compute();
    }
}
