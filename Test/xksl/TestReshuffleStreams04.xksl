
shader ShaderMain
{
	stage stream float2 Position : POSITION;
	stage stream float4 ColorTarget: SV_OUTPUT;
	
	stage void VSMain() 
    {
        streams.Position = float2(0.0f, 1.0f);
    }

	float4 Compute()
	{
		return Compute(streams.Position)
	}
	
	float4 Compute(float2 p)
	{
		streams.ColorTarget = float4(p.xy, 0, 1);
	}
	
    stage void PSMain() 
    {
		Compute();
    }
}
