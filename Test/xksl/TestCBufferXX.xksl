
shader LightPoint
{
	struct PointLightData
	{
		float3 PositionWS;
		float  InvSquareRadius;
		[Color]
		float3 Color;
	};
}

shader ShaderMain
{
	stage stream float2 Position : SV_POSITION;
	stage stream float4 ColorTarget: SV_OUTPUT;
	
	stage void VSMain() 
    {
        streams.Position = float2(0.0f, 1.0f);
    }

    stage void PSMain() 
    {
        streams.ColorTarget = float4(streams.Position.xy, 0, 1);
    }
}
