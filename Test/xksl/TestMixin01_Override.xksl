shader TestMixin01_Base
{
	stream int ColorTarget;

    abstract int Compute()
    {
        return 1;
    }
    void main()
    {
        // Note: Since we don't have streams yet, we might find a different mechanism to hardcode this into SV_Color?
        streams.ColorTarget = Compute();
