
shader ShaderMain<LinkType TTexture, MemberName LocalResourceGroup>
{
    rgroup LocalResourceGroup
    {
        [Link("TTexture")]
        stage Texture2D Texture0;
    }
	
	rgroup ResourceGroup
	{
		SamplerState Sampler0;
	}
	
	stage Texture2D Texture1;
	SamplerState Sampler1;
	
	void VSMain(){}
	
	void PSMain()
	{
		float4 color0 = Texture0.Sample(Sampler0, float2(0.5, 0.5));
		float4 color1 = Texture1.Sample(Sampler1, float2(0.5, 0.5));
	}
};
