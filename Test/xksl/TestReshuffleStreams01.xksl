
shader ShaderMain
{
	stage stream float2 Position : POSITION;
	stage stream float4 ColorTarget: SV_OUTPUT;
	stage stream float2 VertexPosition: V_POSITION;
	
	stage void VSMain() 
    {
        streams.Position = float2(0.0f, 1.0f) + streams.VertexPosition;
    }

    stage void PSMain() 
    {
        streams.ColorTarget = float4(streams.Position.xy, 0, 1);
    }
}
